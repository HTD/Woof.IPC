<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Woof</RootNamespace>
    <Authors>Adam ≈Åyskawa</Authors>
    <Company>CodeDog Ltd.</Company>
    <Description>Inter-Process Communication library.</Description>
    <Copyright>(c)2018 by CodeDog Ltd.</Copyright>
    <PackageLicenseUrl>https://en.wikipedia.org/wiki/MIT_License</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/HTD/Woof.IPC</PackageProjectUrl>
    <PackageTags>code core codedog dotnet system ipc</PackageTags>
    <PackageReleaseNotes>XML documentation completed.</PackageReleaseNotes>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Version>1.0.1</Version>
    <Product>Woof.IPC</Product>
    <PackageId>Woof.IPC</PackageId>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Woof.IPC.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Woof.IPC.Tests\**" />
    <EmbeddedResource Remove="Woof.IPC.Tests\**" />
    <None Remove="Woof.IPC.Tests\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MSTest.TestFramework" Version="1.4.0" />
    <PackageReference Include="System.IO.Pipes.AccessControl" Version="4.5.0" />
  </ItemGroup>

</Project>
